{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <header class="app-header">
        Header
    </header>

    <main class="app-main">
        <h1>Post index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Media</th>
                    <th>Content</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.title }}</td>
                        <td>{{ post.slug }}</td>
                        <td>
                            <img src="{{ asset('/assets/img/post/' ~ post.media ) }}" alt="{{ post.title }}" />
                        </td>
                        <td>{{ post.content | raw }}</td>
                        <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_post_show', {'id': post.id}) }}">show</a>
                            <a href="{{ path('app_post_edit', {'id': post.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_post_new') }}">Create new</a>
    </main>

    <footer class="app-footer">
        Footer
    </footer>
{% endblock %}
